extends layout

block content
  h1= title
  p Consistency perfection

  button(type="button",onclick="doBump()" class="btn btn-info") Press Me

  div(id="bump") Bump the count
  script.
    var count=0;
    var bump=1;
    function doBump() {
      count = count+bump;
      bump++;
      document.getElementById("bump").innerHTML=`Count ${count} with bump ${bump}`
    }

 a(href="/pen") go to pen